  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "attach",
      "name": "Attach to dev",
      "protocol": "inspector",
      "port": 4321,
      "restart": true,
      "cwd": "${workspaceFolder}",
      "sourceMaps": true,
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug dev",
      "protocol": "inspector",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "yarn",
      "runtimeArgs": ["dev"],
      "sourceMaps": true,
      "console": "integratedTerminal"
    }
  ]
}